<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/item_bac"
   >

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/character1"
        android:text="1"
        android:textColor="@color/lightgreen"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/character1"
        android:text="2"
        android:textColor="@color/blue"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/food_name" />

    <Button
        android:id="@+id/sub"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/character1"
        android:text="â€”"
        android:textColor="@color/black"
        android:textSize="5sp"
        app:layout_constraintEnd_toStartOf="@+id/quality"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/food_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quality"
        style="?android:attr/textViewStyle"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="60dp"
        android:background="#8E8C8C"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/character1"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:layout_marginTop="9dp"
        android:text="+"
        android:fontFamily="@font/character1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/quality"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>